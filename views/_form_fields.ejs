<div class="form-group">
    <label for="title">Title</label>
    <input required  type="text" name="title" id="title" class="form-control" placeholder="Enter Title">
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input required  type="text" name="author" id="author" class="form-control" placeholder="Enter Author">
</div>
<div class="form-group">
    <label for="body"> Type Away!</label>
    <textarea required name="body" id="body" cols="30" rows="10" class="form-control"></textarea>
</div>
<div class="form-group">
    <label for="image">Image</label>
    <input required type="text" name="image" id="image" class="form-control" placeholder="Enter Image Url">
</div>
<div class="form-group">
    <label for="createdAt">Created At</label>
    <input required type="text" name="createdAt" id="createdAt" class="form-control" placeholder="Enter Date e.g 10/04/98">
</div>
<button type="submit" class="btn btn-primary"> Post </button>
<a href="/" class="btn btn-dark"> Cancel </a>